<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mensaje para pago en efectivo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pago en Efectivo"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recuerda que deberás tener el importe exacto para completar la transacción."
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- Imagen ilustrativa de billetes y monedas -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_marginBottom="16dp"
        android:contentDescription="Imagen representativa de pago en efectivo"/>

</LinearLayout> 