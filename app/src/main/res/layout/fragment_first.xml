<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <Button
            android:id="@+id/buttonRealizarCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar Compra"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/button_clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GestiÃ³n de Productos"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/button_cupones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Ventas"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/button_historial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximamente..."
            android:layout_marginBottom="40dp" />

        <Button
                android:id="@+id/buttonPagarDirecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introducir importe"
                android:layout_marginBottom="40dp" />
    </LinearLayout>
</ScrollView>
