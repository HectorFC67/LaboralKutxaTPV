<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <Button
            android:id="@+id/buttonRealizarCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar Compra"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/button_clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Productos"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/button_cupones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de Ventas"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/button_historial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximamente..."
            android:layout_marginBottom="40dp" />

        <!-- Bot贸n para cerrar sesi贸n -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesi贸n"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
